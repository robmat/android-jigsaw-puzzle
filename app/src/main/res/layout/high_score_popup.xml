<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <TextView
        android:id="@+id/highScoreTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="24sp"
        android:textStyle="bold"
        android:text="@string/high_scores" />

    <TextView
        android:id="@+id/highScoreDifficulty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/highScoreTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:textSize="18sp" />

    <LinearLayout
        android:id="@+id/highScoreListContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/highScoreDifficulty"
        android:layout_marginTop="16dp"
        android:orientation="vertical">

        <!-- High scores will be added here programmatically -->

    </LinearLayout>

    <Button
        android:id="@+id/highScoreOkButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/highScoreListContainer"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:background="@drawable/orange_button_background"
        android:text="OK"
        tools:ignore="HardcodedText"
        android:textSize="20sp" />

</RelativeLayout>
